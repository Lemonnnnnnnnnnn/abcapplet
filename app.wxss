/**app.wxss**/
@import "./style/weui.wxss";
@import "./style/ali.wxss";

page {
    font-size: 14px;
}

.clearfix:after {
    content: " ";
    display: block;
    height: 0;
    clear: both;
}

.text-center {
    text-align: center;
}

.text-left {
    text-align: left;
}

.text-right {
    text-align: right;
}

.hide {
    display: none !important;
}

.fade_in {
    animation: fadeIn 1s both;
}

/* 蒙层 */

.mask {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10;
    background: rgba(0, 0, 0, 0.6);
}

/* 去除默认样式边框 */

button::after {
    border: none;
}

.ui-nowrap {
    max-width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.multi-line-fold{
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

textarea{
    color: #333;
}
