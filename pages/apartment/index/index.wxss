/* pages/apartment/index/index.wxss */
.box-1 {
    background: url('http://devhhb.images.huihuiba.net/image/icon/search_bg.png') left top no-repeat;
    background-size: cover;
}
.box-1 .wrap {
    padding: 15px 20px;
}
.box-1 .map {
    width: 48%;
    height: 118px;
    float: left;
    background: url('http://devhhb.images.huihuiba.net/image/icon/zuobiao.png') center center no-repeat;
    background-size: cover;
    border-radius: 2px;
}
.box-1 .commute {
    width: 48%;
    height: 118px;
    float: right;
    border-radius: 2px;
    background: url('http://devhhb.images.huihuiba.net/image/icon/tongqin.png') center center no-repeat;
    background-size: cover;
}
.box-1 .map .inner, .box-1 .commute .inner {
    padding: 10px;
}
.box-1 .title {
    color: #4A4A4A;
    font-size: 17px;
    margin-bottom: 5px;
    font-weight: 500;
}
.box-1 .desc {
    color: #9B9B9B;
    font-size: 14px;
}
.box-2 .wrap {
    padding: 10px;
}
.box-2 .title {
    color: #4A4A4A;
    font-size: 17px;
    margin-bottom: 10px;
    font-weight: 500;
}
.box-2 .item {
    background:rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 5px 0px rgba(223, 222, 222, 0.5);
    border-radius: 3px;
    margin-bottom: 10px;
}
.box-2 .item .inner {
    padding: 10px 8px;
}
.box-2 .item-title text {
    color: #4A4A4A;
    font-size: 14px;
}
.box-2 .item-title .number {
    font-size: 24px;
    color: #FFCF11;
    margin-right: 10px;
    position: relative;
    top: 3px;
}
.box-3 .item-desc {
    padding: 10px 20px 20px 10px;
    font-size: 11px;
    color: #9B9B9B;
    line-height: 24px;
}
.box-3 .btn {
    width: 177px;
    height: 46px;
    margin: 20px auto 10px auto;
    background:rgba(255,207,17,1);
    box-shadow: 0px 0px 4px 0px rgba(219,218,218,1);
    border-radius: 23px;
    line-height: 46px;
    text-align: center;
    color: #000;
    font-weight: 500;
}
.box-3 .btn-wrap {
    position: relative;
}
.box-3 .btn-wrap icon {
    display: inline-block;
    width: 40px;
    height: 40px;
    position: absolute;
    right: 30px;
    top: 4px;
    background: url('http://devhhb.images.huihuiba.net/image/icon/kefu.png') center center no-repeat;
    background-size: cover;
}