/* pages/apartment/index/index.wxss */
.box-1 {
    background-color: #efefef;
}
.box-1 .wrap {
    padding: 15px 20px;
}
.box-1 .map {
    width: 48%;
    height: 118px;
    float: left;
    background-color: #fff;
    border-radius: 2px;
}
.box-1 .commute {
    width: 48%;
    height: 118px;
    float: right;
    background-color: #fff;
    border-radius: 2px;
}
.box-1 .map .inner, .box-1 .commute .inner {
    padding: 10px;
}
.box-1 .title {
    color: #4A4A4A;
    font-size: 17px;
    margin-bottom: 5px;
    font-weight: 500;
}
.box-1 .desc {
    color: #9B9B9B;
    font-size: 14px;
}
.box-2 .wrap {
    padding: 10px;
}
.box-2 .title {
    color: #4A4A4A;
    font-size: 17px;
    margin-bottom: 10px;
    font-weight: 500;
}
.box-2 .item {
    background:rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 5px 0px rgba(223, 222, 222, 0.5);
    border-radius: 3px;
    margin-bottom: 10px;
}
.box-2 .item .inner {
    padding: 10px 8px 15px 8px;
}
.box-2 .item-title text {
    color: #4A4A4A;
    font-size: 14px;
}
.box-2 .item-title .number {
    font-size: 24px;
    color: #FFCF11;
    margin-right: 10px;
    position: relative;
    top: 3px;
}
.box-2 .item-desc {
    padding: 5px 20px 30px 36px;
    font-size: 11px;
    color: #9B9B9B;
}