/* pages/apartment/mapHouse/index.wxss */
.box-1 {
    background: #fff;
    height: 50px;
    line-height: 50px;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
}
.box-1 .search {
    display: inline-block;
    width: 90%;
    overflow: hidden;
    position: relative;
    height: 30px;
    margin-left: 5%;
    line-height: 30px;
    background: rgba(243, 242, 243, 1);
    border-radius: 4px;
    margin-top: 10px;
}
.box-1 .search text {
    font-size: 14px;
    color: #ccc;
    margin-left: 35px;
}
.box-1 .search image {
    width: 18px;
    height: 18px;
    position: absolute;
    left: 10px;
    top: 6px;
}
.box-2 {
    display: flex;
    width: 100%;
    position: absolute;
    top: 50px;
    left: 0;
    bottom: 0;
}
.box-2 map {
    flex: 1;
    height: 100%;
}
.box-2 .zhiyin {
    position: fixed;
    bottom: 15px;
    width: 80%;
    left: 10%;
    height: 33px;
}
