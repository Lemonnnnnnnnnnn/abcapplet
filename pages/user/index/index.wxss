/* pages/user/index/index.wxss */
page {
    background-color: #F1F1F1;
}
.wrap {
    padding: 10px;
}
.box-1 {
    background-color: #fff;
}
.box-1 .headimg {
    width: 70px;
    height: 70px;
    border-radius: 70px;
    float: right;
}
.box-1 .headimg image {
    width: 100%;
    height: 100%;
    border-radius: 70px;
}
.box-1 .weui-flex__item {
    width: 50%;
}
.box-1 .username {
    font-size: 26px;
    line-height: 37px;
    margin-bottom: 5px;
}
.box-1 .mobile {
    font-size: 16px;
    line-height: 22px;
}
.box-1 .tip-box {
    margin-top: 25px;
}
.box-1 .tip {
    margin-top: 5px;
    font-size: 14px;
}
.box-1 .tip icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 8px;
}
.box-1 .tip .view {
    background: url('http://devhhb.images.huihuiba.net/image/icon/view.png') center center no-repeat;
    background-size: cover;
}
.box-1 .tip .logo {
    background: url('http://devhhb.images.huihuiba.net/image/icon/logo.png') center center no-repeat;
    background-size: cover;
}
.box-2 .item {
    background-color: #fff;
    margin-bottom: 10px;
    border-radius: 1px;
}
.box-2 .item .inner {
    padding: 20px 8px;
    position: relative;
}
.box-2 .item .icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 8px;
}
.box-2 .item .collection {
    background: url('http://devhhb.images.huihuiba.net/image/icon/collection.png') center center no-repeat;
    background-size: cover;
}
.box-2 .item .log {
    background: url('http://devhhb.images.huihuiba.net/image/icon/log.png') center center no-repeat;
    background-size: cover;
}
.box-2 .item text {
    font-size: 14px;
    text-align: left;
}
.box-2 .item .icon-arrow {
    color: #333;
    font-size: 14px;
    position: absolute;
    right: 8px;
    top: 11px;
}