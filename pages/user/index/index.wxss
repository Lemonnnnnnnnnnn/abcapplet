/* pages/user/index/index.wxss */
page {
    background-color: #F1F1F1;
}
.wrap {
    padding: 10px;
}
.box-1 {
    background-color: #fff;
}
.box-1 .headimg {
    width: 70px;
    height: 70px;
    border-radius: 70px;
    float: right;
    background-color: #efefef;
}
.box-1 .headimg image {
    width: 100%;
    height: 100%;
    border-radius: 70px;
}
.box-1 .weui-flex__item {
    width: 50%;
}
.box-1 .username {
    font-size: 26px;
    line-height: 37px;
    margin-bottom: 5px;
}
.box-1 .mobile {
    font-size: 16px;
    line-height: 22px;
}
.box-1 .tip-box {
    margin-top: 25px;
}
.box-1 .tip {
    margin-top: 5px;
    font-size: 14px;
}
.box-1 .tip icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 8px;
}
.box-1 .tip .view {
    background: url('https://images.gongyuabc.com/image/icon/view.png') center center no-repeat;
    background-size: cover;
}
.box-1 .tip .logo {
    background: url('https://images.gongyuabc.com/image/icon/log.png') center center no-repeat;
    background-size: cover;
}
.box-2 .item {
    background-color: #fff;
    margin-bottom: 10px;
    border-radius: 1px;
}
.box-2 .item .inner {
    padding: 20px 8px;
    position: relative;
}
.box-2 .item .icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 8px;
}
.box-2 .item .collection {
    background: url('https://images.gongyuabc.com/image/icon/collection.png') center center no-repeat;
    background-size: cover;
}
.box-2 .item .log {
    background: url('https://images.gongyuabc.com/image/icon/log.png') center center no-repeat;
    background-size: cover;
}
.box-2 .item text {
    font-size: 14px;
    text-align: left;
}
.box-2 .item .icon-arrow {
    color: #333;
    font-size: 14px;
    position: absolute;
    right: 8px;
    top: 11px;
}
.box-3 {
    width: 92%;
    position: fixed;
    left: 4%;
    top: 100px;
    z-index: 600;
    background-color: #fff;
    border-radius: 5px;
}
.box-3 .inner {
    padding: 15px;
}
.box-3 .title {
    font-size: 17px;
    color: #4A4A4A;
    text-align: center;
    margin-bottom: 20px;
}
.box-3 .title icon {
    display: inline-block;
    width: 22px;
    height: 20px;
    margin-right: 8px;
    background: url('https://images.gongyuabc.com/image/icon/select.png') center center no-repeat;
    background-size: cover;
}
.box-3 .select {
    margin-bottom: 30px;
}
.box-3 .select .item {
    display: flex;
}
.box-3 .select text {
    max-width: 120px;
    font-size: 13px;
    color: #4A4A4A;
}
.box-3 .select .icon-down-arrow {
    font-size: 14px;
    color: #4A4A4A;
    position: relative;
    top: -4px;
    left: 3px;
}
.box-3 .check {
    padding: 4px 0;
}
.box-3 .check-title {
    font-size: 14px;
    color: #000;
    margin-right: 25px;
}
.box-3 .check .item {
    font-size: 12px;
    color: #4A4A4A;
    padding: 2px 8px;
    float: left;
    margin-right: 8px;
    background-color: #EEEEEE;
    border-radius: 11px;
}
.box-3 .check .selected {
    background-color: #FFCF11;
}
.box-3 .btn {
    width: 291px;
    height: 46px;
    background: #FFCF11;
    box-shadow: 0px 0px 4px 0px rgba(219,218,218,1);
    border-radius: 23px;
    margin: 50px auto 5px auto;
    text-align: center;
    font-size: 14px;
    color: #000;
    line-height: 46px;
}