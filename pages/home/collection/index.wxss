/* pages/home/collection/index.wxss */
page {
    background-color: #eee;
}
.wrap {
    padding: 12px;
}
.box-1 {
    background-color: #fff;
    margin-bottom: 6px;
}
.box-1 .img {
    width: 70px;
    height: 70px;
    border-radius: 70px;
    margin-right: 13px;
}
.box-1 .img image {
    width: 100%;
    height: 100%;
    border-radius: 70px;
}
.box-1 .title {
    font-size: 17px;
    color: #000;
}
.box-1 .tip {
    font-size: 11px;
    color: #4A4A4A;
    margin-top: 5px;
}
.box-1 .number {
    font-size: 11px;
    color: #4A4A4A;
    background-color: #FFCF11;
    padding: 2px 5px;
    margin-left: 13px;
}
.box-2 {
    background-color: #fff;
}
.box-2 .list .item {
    width: 100%;
    height: 338px;
    background: rgba(255,255,255,1);
    box-shadow: 0px 0px 5px 0px rgba(222, 222, 222, 1);
    margin-bottom: 12px;
}
.box-2 .item .inner {
    padding: 8px;
}
.box-2 .item .img {
    width: 100%;
    height: 202px;
    margin-bottom: 8px;
    position: relative;
}
.box-2 .img image {
    width: 100%;
    height: 100%;
}
.box-2 .img .want {
    position: absolute;
    right: 8px;
    top: 8px;
    z-index: 10;
    font-size: 8px;
    color: #4A4A4A;
    background-color: #FFCF11;
    padding: 2px 5px;
    border-radius: 8px;
}
.box-2 .scroll-view {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    margin-bottom: 3px;
}
.box-2 .img-item {
    width: 96px;
    height: 63px;
    margin-right: 8px;
    display: inline-block;
}
.box-2 .img-item image {
    width: 100%;
    height: 100%;
}
.box-2 .apartment-name .name {
    font-size: 14px;
    color: #4A4A4A;
}
.box-2 .tag .tag-item {
    color: #4A4A4A;
    font-size: 8px;
    border: 1px solid #979797;
    float: right;
    margin-left: 5px;
    padding: 2px 5px;
    border-radius: 8px;
}
.box-2 .desc .tip {
    color: #9B9B9B;
    font-size: 11px;
}
.box-2 .desc .tag icon {
    display: inline-block;
    width: 18px;
    height: 18px;
    float: left;
    margin-left: 5px;
    border-radius: 18px;
}
.box-2 .desc .tag .minus {
    background: url('http://devhhb.images.huihuiba.net/image/icon/minus.png') center center no-repeat;
    background-size: cover;
}
.box-2 .desc .tag .tuan {
    background: url('http://devhhb.images.huihuiba.net/image/icon/tuan.png') center center no-repeat;
    background-size: cover;
}