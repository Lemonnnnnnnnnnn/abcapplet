/* pages/home/detail/index.wxss */
.wrap {
    padding: 12px 12px 0 12px;
}
.box-1 {
    width: 100%;
    height: 261px;
    position: relative;
}
.box-1 swiper, .box-1 .slide-image {
    width: 100%;
    height: 100%;
}
.box-1 .scroll-view {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    height:25px;
    /* background: linear-gradient(180deg,rgba(251,248,248,1) 0%,rgba(4,3,3,1) 100%); */
    /* filter: blur(5px); */
    position: absolute;
    left: 0px;
    bottom: 0px;
}
.box-1 .item {
    font-size: 12px;
    color: #DBDADB;
    line-height: 25px;
    padding: 0 20px;
    display: inline-block;
    position: relative;
}
.box-1 .list .selected {
    color: #fff;
}
.box-1 .list .selected:before {
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-bottom: 5px solid #fff;
    content: "";
    position: absolute;    
    left: 40%;
    bottom: 0px;
}
.box-2 {
    margin-bottom: 12px;
}
.box-2 .apartment-name {
    color: #000;
    font-weight: 500;
    font-size: 17px;
    line-height: 24px;
    max-width: 300px;
}
.box-2 .address {
    color: #4A4A4A;
    font-size: 13px;
    max-width: 300px;
    line-height: 18px;
    margin-top: 3px;
}
.box-2 .position {
    float: right;
}
.box-2 .position icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    background: url('http://devhhb.images.huihuiba.net/image/icon/location.png') center center no-repeat;
    background-size: cover;
}
.box-2 .position text {
    font-size: 11px;
    color: #4A4A4A;
}
.box-2 .tags {
    margin: 12px 0;
}
.box-2 .tags .tag {
    font-size: 11px;
    color: #000;
    float: left;
    margin-right: 8px;
    border-radius: 10px;
    padding: 2px 8px;
}
.box-2 .tags .yellow {
    background-color: #F7DD77;
}
.box-2 .tags .green {
    background-color: #93FAA4;
}
.box-2 .minus, .box-2 .tuan {
    font-size: 11px;
    color: #4A4A4A;
}
.box-2 .minus icon, .box-2 .tuan icon {
    display: inline-block;
    width: 18px;
    height: 18px;
    margin-right: 5px;
}
.box-2 .minus icon {
    background: url('http://devhhb.images.huihuiba.net/image/icon/minus.png') center center no-repeat;
    background-size: cover;
}
.box-2 .tuan icon {
    background: url('http://devhhb.images.huihuiba.net/image/icon/tuan.png') center center no-repeat;
    background-size: cover;
}
.box-3 .title {
    padding: 6px 12px 9px 12px;
    font-size: 16px;
    color: #4A4A4A;
    font-weight: 500;
}
.box-3 .scroll-view {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    margin-bottom: 4px;
}
.box-3 .item {
    width: 126px;
    height: 144px;
    margin-right: 14px;
    display: inline-block;
    box-shadow:0px 0px 5px 0px rgba(237,236,236,0.5);
}
.box-3 .first-item {
    margin-left: 12px;
}
.box-3 .item .img, .box-3 .img image {
    width: 126px;
    height: 80px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}
.box-3 .item .inner {
    padding: 4px;
}
.box-3 .apartment-name {
    font-size: 12px;
    color: #717172;
    margin-bottom: 4px;
}
.box-3 .item-tag {
    color: #4A4A4A;
    font-size: 9px;
    padding: 0 5px;
    line-height: 15px;
    float: left;
    margin-right: 10px;
}
.box-3 .tags {
    margin-bottom: 8px;
}
.box-3 .tags .green {
    background-color: #EDFAE0;
}
.box-3 .tags .yellow {
    background-color: #FAF3DE;
}
.box-3 .price-box .status {
    width: 26px;
    height: 11px;
    line-height: 11px;
    text-align: center;
    font-size: 8px;
    color: #9B9B9B;
    border: 1px solid #9B9B9B;
    margin-left: 10px;
}
.box-3 .price-box .has {
    color: #FFC000;
    border: 1px solid #FFC000;
}
.box-3 .price-box .price {
    color: #4A4A4A;
    font-size: 11px;
}
.box-3 .ad .ad-inner {
    padding: 12px 12px 4px 12px;
}
.box-3 .ad image {
    width: 100%;
    height: 50px;
}
.box-4 .title {
    font-size: 16px;
    color: #4A4A4A;
    margin-bottom: 10px;
    font-weight: 500;
}
.box-4 .apartment {
    width: 100%;
    height: 71px;
    background-color: #FCF3EA;
    border-radius: 5px;
}
.box-4 .apartment .inner {
    padding: 8px 9px;
}
.box-4 .apartment .apartment-name {
    font-size: 14px;
    color: #4A4A4A;
    margin-bottom: 5px;
}
.box-4 .apartment .tip {
    font-size: 12px;
    color: #9B9B9B;
}
.box-4 .desc {
    font-size: 12px;
    line-height: 18px;
    color: #4A4A4A;
    padding: 13px 0;
}
.box-4 .more {
    color: #FF9600;
    font-size: 12px;
    margin-bottom: 12px;
}
.box-4 .icon-list {
    width: 100%;
    height: 72px;
    background: #fff;
    box-shadow: 0px 0px 5px 0px rgba(238,238,238,1);
    border-radius: 8px;
}
.box-4 .icon-item {
    padding: 10px;
    text-align: center;
}
.box-4 .icon-item icon {
    display: inline-block;
    width: 31px;
    height: 30px;
    margin-bottom: 2px;
}
.box-4 .icon-item .wash {
    background: url('http://devhhb.images.huihuiba.net/wash.png') center center no-repeat;
    background-size: cover;
}
.box-4 .icon-item .dry {
    background: url('http://devhhb.images.huihuiba.net/dry.png') center center no-repeat;
