}
.box-6 .title {
    font-size: 16px;
    color: #4A4A4A;
    font-weight: 500;
}
.box-6 .tip {
    font-size: 12px;
    color: #9B9B9B;
}
.box-6 .service-box {
    width: 100%;
    background-color: #fff;
    box-shadow: 0px 0px 15px 0px rgba(219,218,219,1);
    border-radius: 3px;
    margin: 20px 0 15px 0;
}
.box-6 .service-box .inner {
    padding: 5px 20px;
}
.box-6 .service-box .service-item {
    padding: 15px 0;
    border-bottom: 1px solid #F3F1F1;
}
.box-6 .service-box .service-icon {
    width: 60px;
    margin-right: 50px;
    text-align: center;
}
.box-6 .service-icon icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-bottom: 5px;
}
.box-6 .service-icon .text {
    font-size: 12px;
    color: #4A4A4A;
}
.box-6 .service-icon .require {
    background: url('http://devhhb.images.huihuiba.net/require.png') center center no-repeat;
    background-size: cover;
}
.box-6 .service-icon .cost {
    background: url('http://devhhb.images.huihuiba.net/cost.png') center center no-repeat;
    background-size: cover;
}
.box-6 .service-icon .service {
    background: url('http://devhhb.images.huihuiba.net/service.png') center center no-repeat;
    background-size: cover;
}
.box-6 .list .item {
    float: left;
    margin-right: 20px;
}
.box-6 .item text {
    color: #4A4A4A;
    font-size: 12px;
}
.box-6 .item .icon-gou {
    font-size: 12px;
    margin-right: 3px;
    position: relative;
    top: -5px;
}
.box-6 .service-box .last-item {
    border-bottom: none;
}
.box-6 .defense .tip {
    padding: 6px 0;
    font-size: 14px;
    color: #4A4A4A;
}
.box-6 .defense .border-b {
    border-bottom: 1px solid #F1F1F1;
}
.box-6 .defense .icon-arrow {
    color: #4A4A4A;
    font-size: 14px;
}
.box-7 .title {
    font-size: 16px;
    color: #4A4A4A;
    font-weight: 500;
    margin-bottom: 3px;
}