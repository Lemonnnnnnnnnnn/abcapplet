}
.box-4 .icon-item .leisure {
    background: url('http://devhhb.images.huihuiba.net/leisure.png') center center no-repeat;
    background-size: cover;
}
.box-4 .icon-item .gym {
    background: url('http://devhhb.images.huihuiba.net/gym.png') center center no-repeat;
