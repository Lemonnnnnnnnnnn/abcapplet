}
.box-4 .icon-item .film {
    background: url('http://devhhb.images.huihuiba.net/film.png') center center no-repeat;
    background-size: cover;
}
.box-4 .icon-item .name {
    font-size: 12px;
    color: #4A4A4A;
    text-align: center;
}
.box-5 .title {
    font-size: 16px;
    color: #4A4A4A;
    margin-bottom: 10px;
    font-weight: 500;
}
.box-5 .map {
    width: 100%;
    height: 216px;
}
.box-5 .map map {
    width: 100%;
