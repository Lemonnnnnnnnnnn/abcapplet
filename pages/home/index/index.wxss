.wrap {
    padding: 12px 12px 0 12px;
}
.box-1 {
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 100;
    background-color: #fff;
}
.box-1 .search-inner {
    padding: 0 12px 12px 12px;
}
.box-1 .search-box {
    height: 37px;
    background:rgba(243, 242, 243, 1);
    border-radius: 19px;
}
.box-1 .city {
    width: 50px;
    line-height: 37px;
    margin-left: 15px;
}
.box-1 .city text {
    font-size: 14px;
    color: #4A4A4A;
}
.box-1 .city icon {
    color: #4A4A4A;
    font-size: 12px;
    margin-left: 5px;
}
.box-1 .search {
    margin-left: 35px;
    height: 37px;
    line-height: 37px;
    color: #9B9B9B;
}
.box-1 .search icon {
    display: inline-block;
    margin-right: 10px;
}
.box-2 {
    margin-top: 49px;
}
.box-2 .scroll-view {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
}
.box-2 .item {
