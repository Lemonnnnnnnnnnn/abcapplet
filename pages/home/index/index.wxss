    height: 230px;
    margin-right: 10px;
    display: inline-block;
}
.box-2 .first-item {
    margin-left: 10px;
}
.box-2 .item .img {
    width: 313px;
    height: 172px;
    border-radius: 5px;
}
.box-2 .img image {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}
.box-2 .item .info {
    margin-top: 5px;
}
.box-2 .info .title {
    font-size: 16px;
    color: #4A4A4A;
}
.box-2 .info .tip {
    font-size: 11px;
    color: #9B9B9B;
}
