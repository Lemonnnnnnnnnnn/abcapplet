    width: 306px;
    height: 175px;
    position: relative;
}
.box-4 .img image {
    width: 100%;
    height: 100%;
}
.box-4 .img .info {
    width: 100%;
    height: 50px;
    background: url('http://devhhb.images.huihuiba.net/image/icon/hei-bg.png') center center no-repeat;
