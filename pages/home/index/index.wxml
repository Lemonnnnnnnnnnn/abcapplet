<!--pages/home/index/index.wxml-->
<view class="page">
    <view class="page__bd">
        <!--搜索-->
        <view class="search">
            <view class="wrap">
                <view class="city">
                    <text>厦门</text>
                    <icon></icon>
                </view>
                <view class="search-box">
                    <view>
                        <icon></icon>
                        <text>搜索公寓/商圈</text>
                    </view>
                </view>
            </view>
        </view>
        <!-- 轮播 -->
        <view class="swiper">
            <swiper indicator-dots="true" indicator-color="#D8D8D8" indicator-active-color="indicator-active-color" autoplay="true" circular="true">
                <swiper-item>
                    <navigator class="swiper-item" hover-class="none" url="">
                        <view class="img">
                            <image src="/images/home/001.jpg" class="slide-image" mode='aspectFill' lazy-load="true" width="355" height="150" />
                        </view>
                        <view class="title">#城市活动# 与热血同行</view>
                        <view class="des">高颜值社交型人格</view>
                    </navigator>
                </swiper-item>
            </swiper>
        </view>
        <!-- 热门租房 -->
        <view class="box-1">
            <view class="wrap">
                <view class="title">热门租房商圈</view>
                <view class="list">
                    <navigator class="item" hover-class="" url="">
                        <image src="/images/home/004.png" mode="scaleToFill"></image>
                    </navigator>
                    <navigator class="item" hover-class="" url="">
                        <image src="/images/home/005.png" mode="scaleToFill"></image>
                    </navigator>
                    <navigator class="item" hover-class="" url="">
                        <image src="/images/home/006.png" mode="scaleToFill"></image>
                    </navigator>
                </view>
            </view>
        </view>
        <!-- 本周上新公寓 -->
        <view class="box-2">
            <view class="wrap">
                <view class="title">本周上新公寓</view>
                <view class="list">
                    <navigator class="item" hover-class="" url>
                        <view class="img">
                            <image src="/images/home/002.jpeg" mode="scaleToFill"></image>
                            <view class="info">
                                <view class="clearfix apartment">
                                    <view class="title">龙湖冠寓高新店</view>
                                    <view class="price">￥1650-2000</view>
                                    <view class="tag">
                                        <icon class="minus"></icon>
                                        <icon class="tuan"></icon>
                                    </view>
                                </view>
                                <view class="desc">青年优品，城市生活风向标</view>
                            </view>
                        </view>
                    </navigator>
                    <navigator class="item" hover-class="" url>
                        <view class="img">
                            <image src="/images/home/002.jpeg" mode="scaleToFill"></image>
                            <view class="info">
                                <view class="clearfix name">
                                    <view class="title">龙湖冠寓高新店</view>
                                    <view class="price">￥1650-2000</view>
                                    <view class="tag">
                                        <icon class="minus"></icon>
                                        <icon class="tuan"></icon>
                                    </view>
                                </view>
                                <view class="desc">青年优品，城市生活风向标</view>
                            </view>
                        </view>
                    </navigator>
                </view>
            </view>
        </view>
        <!-- 广告位 -->
        <view class="box-3">
            <view class="wrap">
                <view class="weui-flex">
                    <view class="weui-flex__item">
                        <navigator class="ad" hover-class="none" url="">
                            <image src="/images/home/mianzu.png"></image>
                        </navigator>
                    </view>
                    <view class="weui-flex__item">
                        <navigator class="ad" hover-class="none" url="">
                            <image src="/images/home/zhekou.png"></image>
                        </navigator>
                    </view>
                </view>
            </view>
        </view>
        <!-- 严选公寓 -->
        <view class="box-4">
            <view class="wrap">
                <view class="title">严选公寓</view>
                <view class="select">
                    <view class="weui-flex">
                        <view class="weui-flex__item">
                            <view class="item">
                                <text>商圈</text>
                                <icon></icon>
                            </view>
                        </view>
                        <view class="weui-flex__item">
                            <view class="item">
                                <text>价格</text>
                                <icon></icon>
                            </view>
                        </view>
                        <view class="weui-flex__item">
                            <view class="item">
                                <text>户型</text>
                                <icon></icon>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="list">
                    <view class="item">
                        <view class="inner">
                            <view class="img">
                                <image src="/images/home/002.jpeg" mode="scaleToFill"></image>
                                <text class="want">220人想住</text>
                            </view>
                            <scroll-view scroll-x="true">
                                <view class="img-list">
                                    <view class="img-item">
                                        <image src="/images/home/003.jpeg"></image>
                                    </view>
                                    <view class="img-item">
                                        <image src="/images/home/003.jpeg"></image>
                                    </view>
                                </view>
                            </scroll-view>
                            <view class="apartment-name">
                                <view class="weui-flex">
                                    <view class="weui-flex__item">
                                        <view class="name">龙湖冠寓·高新店</view>
                                    </view>
                                    <view class="weui-flex__item">
                                        <view class="tag clearfix">
                                            <view class="tag-item">BRT</view>
                                            <view class="tag-item">市行政服务中心</view>
                                        </view>
                                    </view>
                                </view>
                            </view>
                            <view class="desc">
                                <view class="weui-flex">
                                    <view class="weui-flex__item">
                                        <view class="tip">高颜值社交型公寓</view>
                                    </view>
                                    <view>
                                        <view class="tag clearfix">
                                            <icon class="minus"></icon>
                                            <icon class="tuan"></icon>
                                        </view>
                                    </view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>