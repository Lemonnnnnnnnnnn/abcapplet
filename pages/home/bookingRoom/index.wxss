/* pages/home/bookingRoom/index.wxss */
page {
    background-color: #F9F9F9;
}
.wrap {
    padding: 12px;
}
.box-1 {
    background-color: #fff;
}
.box-1 .img {
    width: 98%;
    height: 107px;
    margin-right: 2%;
    position: relative;
}
.box-1 .img image {
    width: 100%;
    height: 100%;
}
.box-1 .img .price-wrap {
    width: 100%;
    height: 26px;
    background: url('https://images.gongyuabc.com/image/icon/hei-bg.png') center center no-repeat;
    background-size: cover;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 10;
}
.box-1 .price-wrap .price {
    font-size: 14px;
    color: #fff;
    text-align: center;
    line-height: 26px;
}
.box-1 .info {
    margin-left: 8px;
}
.box-1 .info .title {
    max-width: 160px;
    font-size: 17px;
    color: #000;
}
.box-1 .info .address {
    font-size: 11px;
    color: #4A4A4A;
    line-height: 16px;
    margin-top: 5px;
}
.box-1 .info .tags {
    margin-top: 18px;
}
.box-1 .tags view {
    font-size: 11px;
    color: #000;
    padding: 2px 8px;
    float: left;
    margin-right: 7px;
    border-radius: 10px;
}
.box-1 .tags .yellow {
    background-color: #F7DD77;
}
.box-1 .tags .green {
    background-color: #93FAA4;
}
.box-2 .title {
    font-size: 14px;
    color: #4A4A4A;
    padding: 12px 12px 0 12px;
}
.box-2 .container {
    background-color: #fff;
}
.box-2 .userinfo {
    margin-bottom: 10px;
}
.box-2 .userinfo .img {
    width: 50px;
    height: 50px;
    border-radius: 50px;
    margin-right: 17px;
}
.box-2 .userinfo .img image {
    width: 100%;
    height: 100%;
    border-radius: 50px;
}
.box-2 .userinfo .username, .box-2 .userinfo .mobile {
    font-size: 14px;
    color: #9B9B9B;
    line-height: 24px;
}
.box-2 .userinfo .change {
    font-size: 14px;
    color: #4A90E2;
    position: relative;
    top: 10px;
}
.box-2 .time {
    border-bottom: 1px solid #EEEEEE;
}
.box-2 .item-title {
    font-size: 14px;
    color: #000;
    line-height: 37px;
}
.box-2 .type icon, .box-2 .time icon {
    font-size: 14px;
    color: #000;
}
.box-3 .title {
    font-size: 14px;
    color: #4A4A4A;
    padding: 12px 12px 0 12px;
}
.box-3 .container {
    background-color: #fff;
}
.box-3 .select {
    margin-bottom: 6px;
    border-bottom: 1px solid #EEEEEE;
}
.box-3 .select text {
    font-size: 13px;
    color: #4A4A4A;
}
.box-3 .select .icon-down-arrow {
    font-size: 14px;
    color: #4A4A4A;
    position: relative;
    top: -4px;
    left: 3px;
}
.box-3 .check {
    padding: 4px 0;
}
.box-3 .check-title {
    font-size: 14px;
    color: #000;
    margin-right: 40px;
}
.box-3 .check .item {
    font-size: 12px;
    color: #4A4A4A;
    padding: 2px 8px;
    float: left;
    margin-right: 8px;
    background-color: #EEEEEE;
    border-radius: 11px;
}
.box-4 .btn {
    width: 291px;
    height: 46px;
    background: #FFCF11;
    box-shadow: 0px 0px 4px 0px rgba(219,218,218,1);
    border-radius: 23px;
    margin: 17px auto;
    text-align: center;
    font-size: 14px;
    color: #000;
    line-height: 46px;
}