/* pages/home/search/index.wxss */
.wrap {
    padding: 12px;
}
.search .search-btn {
    width: 34px;
    line-height: 37px;
    font-size: 16px;
    color: #4A4A4A;
    margin-left: 18px;
}
.search .search-box {
    background-color: #F3F2F3;
    border-radius: 19px;
}
.search .search-box icon {
    display: inline-block;
    font-size: 20px;
    margin-left: 15px;
    margin-right: 12px;
    line-height: 37px;
}
.search .search-box input {
    line-height: 37px;
    height: 37px;
    margin-right: 12px;
}
.box-1 .history, .box-1 .hot {
    margin-bottom: 20px;
}
.box-1 .title {
    font-size: 16px;
    color: #4A4A4A;
}
.box-1 .item {
    font-size: 14px;
    color: #9B9B9B;
    line-height: 24px;
}
.box-2 .result {
    font-size: 11px;
    color: #BBB9BC;
    text-align: center;
    margin-bottom: 12px;
}
.box-2 .list .item {
    width: 100%;
    height: 338px;
    background: rgba(255,255,255,1);
    box-shadow: 0px 0px 5px 0px rgba(222, 222, 222, 1);
    margin-bottom: 12px;
}
.box-2 .item .inner {
    padding: 8px;
}
.box-2 .item .img {
    width: 100%;
    height: 202px;
    margin-bottom: 8px;
    position: relative;
}
.box-2 .img image {
    width: 100%;
    height: 100%;
}
.box-2 .img .want {
    position: absolute;
    right: 8px;
    top: 8px;
    z-index: 10;
    font-size: 8px;
    color: #4A4A4A;
    background-color: #FFCF11;
    padding: 2px 5px;
    border-radius: 8px;
}
.box-2 .scroll-view {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    margin-bottom: 3px;
}
.box-2 .img-item {
    width: 96px;
    height: 63px;
    margin-right: 8px;
    display: inline-block;
}
.box-2 .img-item image {
    width: 100%;
    height: 100%;
}
.box-2 .apartment-name .name {
    font-size: 14px;
    color: #4A4A4A;
}
.box-2 .tag .tag-item {
    color: #4A4A4A;
    font-size: 8px;
    border: 1px solid #979797;
    float: right;
    margin-left: 5px;
    padding: 2px 5px;
    border-radius: 8px;
}
.box-2 .desc .tip {
    color: #9B9B9B;
    font-size: 11px;
}
.box-2 .desc .tag icon {
    display: inline-block;
    width: 18px;
    height: 18px;
    float: left;
    margin-left: 5px;
    border-radius: 18px;
}
.box-2 .desc .tag .minus {
    background: url('http://devhhb.images.huihuiba.net/image/icon/minus.png') center center no-repeat;
    background-size: cover;
}
.box-2 .desc .tag .tuan {
    background: url('http://devhhb.images.huihuiba.net/image/icon/tuan.png') center center no-repeat;
    background-size: cover;
}