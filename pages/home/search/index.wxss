/* pages/home/search/index.wxss */
.wrap {
    padding: 12px;
}
.search {
    width: 100%;
    background-color: #fff;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 600;
}
.search .search-btn {
    width: 34px;
    line-height: 37px;
    font-size: 16px;
    color: #4A4A4A;
    margin-left: 18px;
}
.search .search-box {
    background-color: #F3F2F3;
    border-radius: 19px;
}
.search .search-box icon {
    display: inline-block;
    font-size: 20px;
    margin-left: 15px;
    margin-right: 12px;
    line-height: 37px;
}
.search .search-box input {
    line-height: 37px;
    height: 37px;
    margin-right: 12px;
}
.box-1 {
    margin-top: 61px;
}
.box-1 .history, .box-1 .hot {
    margin-bottom: 20px;
}
.box-1 .title {
    font-size: 16px;
    color: #4A4A4A;
}
.box-1 .item {
    font-size: 14px;
    color: #9B9B9B;
    line-height: 24px;
}
.box-2 {
    width: 100%;
    position: fixed;
    left: 0;
    top: 61px;
    z-index: 600;
    background-color: #fff;
}
.box-2 .select {
    width: 100%;
    height: 29px;
    background-color: #fff;
    margin-bottom: 6px;
}
.box-2 .select-inner {
    padding: 0 12px;
}
.box-2 .select text {
    font-size: 13px;
    color: #4A4A4A;
}
.box-2 .select .icon-down-arrow {
    font-size: 14px;
    color: #4A4A4A;
    position: relative;
    top: -4px;
    left: 3px;
}
.box-2 .select .icon-up-arrow {
    font-size: 14px;
    color: #4A4A4A;
    position: relative;
    top: -4px;
    left: 3px;
}
.box-2 .select-box {
    background-color: #fff;
}
.box-2 .select-box .inner {
    padding: 15px;
}
.box-2 .type .type-item {
    font-size: 14px;
    color: #4A4A4A;
    margin-bottom: 8px;
    text-align: center;
}
.box-2 .price .price-item {
    font-size: 14px;
    color: #4A4A4A;
    margin-bottom: 8px;
    text-align: center;
}
.box-2 .business .left {
    width: 130px;
    margin-right: 10px;
}
.box-2 .business .left-item {
    font-size: 14px;
    color: #4A4A4A;
    margin-bottom: 8px;
    text-align: left;
}
.box-2 .business .right-item {
    font-size: 14px;
    color: #4A4A4A;
    margin-bottom: 8px;
}
.box-2 .select-box .selected {
    color: #ffcf11 !important;
}
.box-3 {
    margin-top: 96px;
}
.box-3 .inner {
    padding: 0 12px;
}
.box-3 .tips {
    font-size: 11px;
    color: #BBB9BC;
    text-align: center;
    padding-bottom: 10px;
}
.box-3 .list .item {
    width: 100%;
    height: 338px;
    background: rgba(255,255,255,1);
    box-shadow: 0px 0px 5px 0px rgba(222, 222, 222, 1);
    margin-bottom: 12px;
}
.box-3 .item .inner {
    padding: 8px;
}
.box-3 .item .img {
    width: 100%;
    height: 202px;
    margin-bottom: 8px;
    position: relative;
}
.box-3 .img image {
    width: 100%;
    height: 100%;
}
.box-3 .img .want {
    position: absolute;
    right: 8px;
    top: 8px;
    z-index: 9;
    font-size: 8px;
    color: #4A4A4A;
    background-color: #FFCF11;
    padding: 2px 5px;
    border-radius: 8px;
}
.box-3 .scroll-view {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    margin-bottom: 3px;
}
.box-3 .img-item {
    width: 96px;
    height: 63px;
    margin-right: 8px;
    display: inline-block;
    position: relative;
}
.box-3 .img-item-mask {
    width: 100%;
    height: 100%;
    background: url('https://images.gongyuabc.com/image/icon/house_type_bg.png') center center no-repeat;
    background-size: cover;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 10;
}
.box-3 .img-item-mask .house-title {
    padding-top: 10px;
    color: #eee;
    font-size: 14px;
    text-align: center;
    margin-bottom: 3px;
}
.box-3 .img-item-mask .price {
    color: #eee;
    font-size: 12px;
    text-align: center;
}
.box-3 .img-item image {
    width: 100%;
    height: 100%;
}
.box-3 .apartment-name .name {
    font-size: 14px;
    color: #4A4A4A;
}
.box-3 .tag .tag-item {
    color: #4A4A4A;
    font-size: 8px;
    border: 1px solid #979797;
    float: right;
    margin-left: 5px;
    padding: 2px 5px;
    border-radius: 8px;
}
.box-3 .desc .tip {
    color: #9B9B9B;
    font-size: 11px;
}
.box-3 .desc .tag icon {
    display: inline-block;
    width: 18px;
    height: 18px;
    float: left;
    margin-left: 5px;
    border-radius: 18px;
}
.box-3 .desc .tag .tuan {
    background: url('https://images.gongyuabc.com/image/iconnew/tuan.png') center center no-repeat;
    background-size: cover;
}
.box-3 .desc .tag .lian {
    background: url('https://images.gongyuabc.com/image/iconnew/lian.png') center center no-repeat;
    background-size: cover;
}
.box-3 .desc .tag .xiao {
    background: url('https://images.gongyuabc.com/image/iconnew/xiao.png') center center no-repeat;
    background-size: cover;
}
.box-3 .desc .tag .cu {
    background: url('https://images.gongyuabc.com/image/iconnew/cu.png') center center no-repeat;
    background-size: cover;
}
.box-3 .desc .tag .lao {
    background: url('https://images.gongyuabc.com/image/iconnew/lao.png') center center no-repeat;
    background-size: cover;
}
.box-3 .desc .tag .shuidian {
    background: url('https://images.gongyuabc.com/image/iconnew/shuidian.png') center center no-repeat;
    background-size: cover;
}
.box-3 .desc .tag .rentTime {
    background: url('https://images.gongyuabc.com/image/iconnew/rentTime.png') center center no-repeat;
